<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right">

        <ImageButton
            android:id="@+id/btnTitle_UnAe"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:background="#FFFFFF"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/title_horizontal_unae" />

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="180dp"
            android:background="#FFFFFF"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_baseline_settings_24" />

    </LinearLayout>

    <ImageView
        android:id="@+id/maintitle"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:srcCompat="@drawable/googleads" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="top">


        <Button
            android:id="@+id/hoicha55"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="55회"
            android:textStyle="bold"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/hoicha54"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="54회"
            android:textStyle="bold"
            android:textSize="30dp"/>


        <Button
            android:id="@+id/hoicha53"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="53회"
            android:textStyle="bold"
            android:textSize="30dp"/>


        <Button
            android:id="@+id/hoicha52"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="52회"
            android:textStyle="bold"
            android:textSize="30dp"/>


        <Button
            android:id="@+id/hoicha51"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="51회"
            android:textStyle="bold"
            android:textSize="30dp"/>
    </LinearLayout>




</LinearLayout>



